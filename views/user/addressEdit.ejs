<%- include('./userLayout/userHeader') %>
<body>

    <%- include('./userLayout/navBar') %>
<div class="container mb-4">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <h1 class="text-center"> Add Address</h1>
            <form action="/editAddress" method="post">
                <div class="form-group text-center text-danger">

                    <label for="username" class="text-dark">House / Building Name:</label>
                    <input type="text" class="form-control translucent-input text-center" id="username" name="houseName" value="<%= address.houseName %>">

                    <label for="Place" class="text-dark">Place:</label>
                    <input type="text" class="form-control translucent-input text-center" id="username" name="place" value="<%= address.place %>">

                    <label for="districts" class="text-dark form-label ">District:</label>
                                    <select class="form-control text-center id="product_variant" name="districts">
                                      <% for(let i=0; i<districts.length; i++){ %>
                                        <option value="<%= districts[i].name%>" <% if(districts[i].name == address.district){%> selected <% } %>>
                                          <%= districts[i].name%>
                                        </option>
                                        <% } %>
                                    </select>
                    <label for="pinCode" class="text-dark">PIN Code:</label>
                    <input type="number" class="form-control translucent-input text-center" id="username" name="pinCode" value="<%= address.pinCode %>">
                
                    <label for="email">Email:</label>
                    <input type="hidden" class="form-control translucent-input text-center" id="email" name="email" value="<%= address.userEmail %>">
                    <input type="hidden" class="form-control translucent-input text-center" id="_id" name="addressId" value="<%= address._id %>">
                
                
                </div>
                <button type="submit" class="mt-5 btn btn-secondary text-center" style="margin-left: 30%;">Submit</button>
            </form>
        </div>
    </div>
</div>



